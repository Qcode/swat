<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title" value="SwatFileEntry Example" />
		<widget class="SwatForm" id="my_form">
			<property name="action" value="index.php?demo=FileEntry" />

			<widget class="SwatFormField">
				<property name="title" value="Entry" type="string" />
				<widget class="SwatFileEntry" id="file_entry">
					<property name="accept_mime_types[]" value="image/gif" />
					<property name="accept_mime_types[]" value="image/jpeg" />
					<property name="accept_mime_types[]" value="image/png" />

					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>

			<widget class="SwatButton">
				<property name="title" value="Upload" type="string" />
			</widget>
		</widget>
	</widget>
</swat-interface>
