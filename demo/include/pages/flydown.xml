<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title">SwatFlydown Demos</property>
		<widget class="SwatForm" id="my_form">

			<widget class="SwatFieldset">
				<property name="title">Static Flydowns</property>

				<widget class="DemoDocumentationLink">
					<property name="title">SwatFlydown Documentation</property>
					<property name="link">http://docs.silverorange.com/Swat/SwatFlydown.html</property>
				</widget>

				<widget class="SwatFormField">
					<property name="title" type="string">Flat Flydown</property>
					<widget class="SwatFlydown" id="flydown">
						<property name="blank_title">&lt; select a fruit ></property>
					</widget>
				</widget>

				<widget class="DemoDocumentationLink">
					<property name="title">SwatFlydownTree Documentation</property>
					<property name="link">http://docs.silverorange.com/Swat/SwatFlydownTree.html</property>
				</widget>

				<widget class="SwatFormField">
					<property name="title" type="string">Tree Fldyown</property>
					<widget class="SwatTreeFlydown" id="tree_flydown">
						<property name="show_blank" type="boolean">false</property>
					</widget>
				</widget>
				
			</widget>
			<widget class="SwatFieldset">
				<property name="title">Cascading Flydowns</property>

				<widget class="DemoDocumentationLink">
					<property name="title">SwatCascadeFlydown Documentation</property>
					<property name="link">http://docs.silverorange.com/Swat/SwatCascadeFlydown.html</property>
				</widget>
				
				<widget class="SwatFormField">
					<property name="title" type="string">Cascade From</property>
					<widget class="SwatFlydown" id="cascade_from">
						<property name="blank_title">&lt; select a fruit ></property>
					</widget>
				</widget>

				<widget class="SwatFormField">
					<property name="title" tpye="string">Cascade To</property>
					<widget class="SwatCascadeFlydown" id="cascade_to">
						<property name="show_blank" type="boolean">false</property>
					</widget>
				</widget>

			</widget>
		</widget>
	</widget>
</swat-interface>
