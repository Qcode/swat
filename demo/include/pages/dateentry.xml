<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title" value="SwatDateEntry and SwatTimeEntry Examples" />
		<widget class="SwatForm" id="my_form">

			<widget class="SwatFieldset">
				<property name="title" value="Date Examples" />

				<widget class="SwatFormField">
					<property name="title" value="Date with a Calendar (default)" type="string" />
					<widget class="SwatDateEntry" id="default_date">
					</widget>
				</widget>

				<widget class="SwatFormField">
					<property name="title" value="Date and Time with a Calendar" type="string" />
					<widget class="SwatDateEntry" id="time_date">
						<property name="display_parts" value="YEAR|MONTH|DAY|TIME|CALENDAR" type="constant" />
					</widget>
				</widget>

				<widget class="SwatFormField">
					<property name="title" value="Creditcard Style" type="string" />
					<widget class="SwatDateEntry" id="cc_date">
						<property name="display_parts" value="YEAR|MONTH" type="constant" />
					</widget>
				</widget>
				
			</widget>
			<widget class="SwatFieldset">
				<property name="title" value="Time Examples" />

				<widget class="SwatFormField">
					<property name="title" value="Time (default)" type="string" />
					<widget class="SwatTimeEntry" id="default_time">
					</widget>
				</widget>

			</widget>
		</widget>
	</widget>
</swat-interface>
