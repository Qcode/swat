<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title">SwatTextarea Demos</property>
		<widget class="SwatForm" id="my_form">

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTextarea Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTextarea.html</property>
			</widget>

			<widget class="SwatFormField">
				<property name="title">Plain Text Area</property>
				<widget class="SwatTextarea" id="textarea" />
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTextareaEditor Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTextareaEditor.html</property>
			</widget>

			<widget class="SwatFormField">
				<property name="title">Visual Editor Text Area</property>
				<widget class="SwatTextareaEditor" id="textarea_editor" />
			</widget>

		</widget>
	</widget>
</swat-interface>
