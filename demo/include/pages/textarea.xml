<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title" value="SwatTextarea Example" />
		<widget class="SwatForm" id="my_form">

			<widget class="SwatFormField">
				<property name="title" value="Plain Text Area" />
				<widget class="SwatTextarea" id="textarea" />
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Visual Editor Text Area" />
				<widget class="SwatTextareaEditor" id="textarea_editor" />
			</widget>

		</widget>
	</widget>
</swat-interface>
