<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title">SwatPasswordEntry Demo</property>
		<widget class="SwatForm" id="my_form">
			<property name="action">index.php?demo=PasswordEntry</property>

			<widget class="SwatFormField">
				<property name="title" type="string">Password Entry</property>
				<widget class="SwatPasswordEntry" id="password">
					<property name="required" type="boolean">true</property>
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="title" type="string">Confirm Password Entry</property>
				<widget class="SwatConfirmPasswordEntry" id="confirm_password">
				</widget>
			</widget>

			<widget class="SwatFormFooterField">
				<widget class="SwatButton">
					<property name="title" type="string">Validate</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>
