<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title">Fieldset Demos</property>
		<widget class="SwatForm" id="my_form">

			<widget class="DemoDocumentationLink">
				<property name="title">SwatFieldset Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatFieldset.html</property>
			</widget>

			<widget class="SwatFieldset">
				<property name="title">Checkboxes</property>

				<widget class="SwatFormField">
					<property name="title">Check 1</property>
					<widget class="SwatCheckbox" id="check1">
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title">Check 2</property>
					<widget class="SwatCheckbox" id="check2">
					</widget>
				</widget>
				
			</widget>
			
			<widget class="SwatFieldset">
				<property name="title">Radio Buttons</property>

				<widget class="SwatRadioList" id="radio_list">
					<property name="options[0]">Apple</property>
					<property name="options[1]">Orange</property>
					<property name="options[2]">Banana</property>
					<property name="options[3]">Pear</property>
					<property name="options[4]">Pineapple</property>
					<property name="options[5]">Kiwi</property>
					<property name="options[6]">Tangerine</property>
					<property name="options[7]">Grapefruit</property>
					<property name="options[8]">Strawberry</property>
					<property name="value" type="integer">5</property>
				</widget>
				
			</widget>

		</widget>
	</widget>
</swat-interface>
