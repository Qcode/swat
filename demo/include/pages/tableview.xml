<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title">SwatTableView Demo</property>
		<widget class="SwatForm" id="my_form">

			<widget class="SwatTableView" id="table_view">
				<object class="SwatTableViewCheckboxColumn" id="checkbox">
					<object class="SwatCheckboxCellRenderer" id="items">
						<property name="value" type="data">title</property>
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title">Fruit Name</property>
					<object class="SwatTextCellRenderer">
						<property name="value" type="data">title</property>
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title">Makes Jam</property>
					<object class="SwatCheckCellRenderer">
						<property name="value" type="data">makes_jam</property>
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title">Makes Pie</property>
					<object class="SwatCheckCellRenderer">
						<property name="value" type="data">makes_pie</property>
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title">Harvest Date</property>
					<object class="SwatDateCellRenderer">
						<property name="date" type="data">harvest_date</property>
						<property name="format" type="string">%B</property>
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title">Cost per kg</property>
					<object class="SwatMoneyCellRenderer">
						<property name="value" type="data">cost</property>
						<property name="locale" type="string">en_CA</property>
					</object>
				</object>
			</widget>
			<widget class="SwatContentBlock">
				<property name="content"><![CDATA[
				<div class="note">
				Note: These actions are for demonstration purposes only.
				The actions do not do anything as this page is not connected
				to a database.
				</div>
				]]>
				</property>
			</widget>
			<widget class="SwatActions" id="index_actions">
				<widget class="SwatActionItem" id="havest_date">
					<property name="title">set harvest date</property>
					<widget class="SwatFormField">
						<property name="title">to month</property>
						<widget class="SwatDateEntry">
							<property name="display_parts" type="constant">MONTH</property>
						</widget>
					</widget>
				</widget>
				<widget class="SwatActionItem" id="makes_jam">
					<property name="title">set jammable</property>
					<widget class="SwatFormField">
						<property name="title">to</property>
						<widget class="SwatYesNoFlydown">
						</widget>
					</widget>
				</widget>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTableView Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTableView.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTableStore Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTableStore.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTableViewColumn Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTableViewColumn.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTableViewCheckboxColumn Documentation</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTableViewCheckboxColumn.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatTextCellRenderer</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatTextCellRenderer.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatCheckCellRenderer</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatCheckCellRenderer.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatCheckboxCellRenderer</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatCheckboxCellRenderer.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatDateCellRenderer</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatDateCellRenderer.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatMoneyCellRenderer</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatMoneyCellRenderer.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatActions</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatActions.html</property>
			</widget>

			<widget class="DemoDocumentationLink">
				<property name="title">SwatActionItem</property>
				<property name="link">http://docs.silverorange.com/Swat/SwatActionItem.html</property>
			</widget>

		</widget>
	</widget>
</swat-interface>
