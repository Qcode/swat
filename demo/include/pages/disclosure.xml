<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="my_frame">
		<property name="title" value="SwatDisclosure Example" />
		<widget class="SwatForm" id="my_form">

			<widget class="SwatDisclosure">
				<property name="title" value="Checkboxes" />

				<widget class="SwatFormField">
					<property name="title" value="Check 1" />
					<widget class="SwatCheckbox" id="check1">
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" value="Check 2" />
					<widget class="SwatCheckbox" id="check2">
					</widget>
				</widget>

				<widget class="SwatDisclosure">
					<property name="title" value="Inside" />
					<property name="open" value="false" type="boolean" />

					<widget class="SwatFormField">
						<property name="title" value="Entry" />
						<widget class="SwatEntry" id="entry">
						</widget>
					</widget>
					
				</widget>
				
			</widget>
			
			<widget class="SwatDisclosure">
				<property name="title" value="Radio Buttons" />
				<property name="open" value="false" type="boolean" />

				<widget class="SwatFormField">
					<property name="title" value="Radio List" />
					<widget class="SwatRadioList" id="radio_list">
						<property name="options[0]" value="Apple" />
						<property name="options[1]" value="Orange" />
						<property name="options[2]" value="Banana" />
						<property name="options[3]" value="Pear" />
						<property name="options[4]" value="Pineapple" />
						<property name="options[5]" value="Kiwi" />
						<property name="options[6]" value="Tangerine" />
						<property name="options[7]" value="Grapefruit" />
						<property name="options[8]" value="Strawberry" />
						<property name="value" value="5" type="integer" />
					</widget>
				</widget>
				
			</widget>

		</widget>
	</widget>
</swat-interface>
