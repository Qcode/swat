<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatForm" id="my_form">

		<widget class="SwatFieldset">
			<property name="title">Cropper with no aspect ratio set</property>

			<widget class="SwatImageCropper">
				<property name="image_width" type="integer">400</property>
				<property name="image_height" type="integer">267</property>
				<property name="image_uri">images/crop1.jpg</property>
			</widget>

		</widget>

		<widget class="SwatFieldset">
			<property name="title">Cropper with aspect ratio set</property>

			<widget class="SwatImageCropper">
				<property name="image_width" type="integer">267</property>
				<property name="image_height" type="integer">400</property>
				<property name="crop_box_ratio" type="float">2.0</property>
				<property name="image_uri">images/crop2.jpg</property>
			</widget>

		</widget>

		<widget class="SwatFooterFormField">
			<widget class="SwatButton"/>
		</widget>
	</widget>
</swatml>
