<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatForm" id="my_form">

		<!-- custom css for the radiolist demo -->
		<widget class="SwatContentBlock">
			<property name="content"><![CDATA[<style>
			.swat-radio-list li.orange label {
				color: #b60;
			}
			.swat-radio-list li.apple label {
				color: #a00;
			}
			</style>]]></property>
			<property name="content_type">text/xml</property>
		</widget>

		<widget class="SwatFieldset">
			<property name="title" type="string">Radio List</property>
			<widget class="SwatFormField">
				<property name="title" type="string">Apples or Oranges</property>
				<widget class="SwatRadioList" id="radiolist">
					<property name="value" type="integer">7</property>
				</widget>
			</widget>
		</widget>

		<widget class="SwatFieldset">
			<property name="title" type="string">Radio Table</property>
			<widget class="SwatFormField">
				<property name="title" type="string">Favorite Fruit</property>
				<widget class="SwatRadioTable" id="radiotable">
					<property name="value" type="integer">7</property>
				</widget>
			</widget>
		</widget>

		<widget class="SwatFooterFormField">
			<widget class="SwatButton"/>
		</widget>
	</widget>
</swatml>
