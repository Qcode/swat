<?xml version="1.0"?>
<ruleset name="Swat">
	<description>Coding standard for silverorange legacy packages. New packages use PSR1, PSR2, and PSR4.</description>

	<arg name="colors"/>
	<arg name="tab-width" value="4"/>
	<arg name="extensions" value="php"/>
	<arg name="encoding" value="utf-8"/>
	<arg name="warning-severity" value="0"/>

	<file>./Swat</file>
	<file>./SwatDB</file>
	<file>./SwatI18N</file>

	<rule ref="SilverorangeLegacy"/>
</ruleset>
