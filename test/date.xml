<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="frame1">
		<property name="title" value="New Weblog Post Example Form" />
		<widget class="SwatForm" id="form1">

			<widget class="SwatFormField">
				<property name="title" value="Title" />
				<widget class="SwatEntry" id="title">
					<property name="required" type="boolean" value="true" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Date 2" />
				<widget class="SwatDate" id="date2" />
			</widget>
			
			<widget class="SwatDisclosure">
				<property name="title" value="Optional Fields" />
				<property name="open" type="boolean" value="false" />
				
				<widget class="SwatFormField">
					<property name="title" value="Date" />
					<widget class="SwatDate" id="date" />
				</widget>
	
				<widget class="SwatFormField">
					<property name="title" value="Time" />
					<widget class="SwatTime" id="time" />
				</widget>
				
				<widget class="SwatFormField">
					<property name="title" value="Email" />
					<widget class="SwatEntryEmail" id="email" />
				</widget>
				
			</widget>

			<widget class="SwatFormField">
				<property name="class" value="swat-form-footer" />
				<widget class="SwatButton" id="btn_create">
					<property name="title" value="Create" />
				</widget>
			</widget>

		</widget>
	</widget>
</swat-interface>
