<?xml version="1.0" encoding="UTF-8"?>
<swat-interface>
	<widget class="SwatFrame" name="frame1">
		<property name="title" value="New Weblog Post Example Form" />
		<widget class="SwatForm" name="form1">
			<widget class="SwatFormField">
				<property name="title" value="Title" />
				<widget class="SwatEntry" name="title">
					<property name="required" type="boolean" value="true" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Short name" />
				<widget class="SwatEntry" name="shortname">
					<property name="required" type="boolean" value="true" />
					<property name="maxlength" type="integer" value="10" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Hidden?" />
				<widget class="SwatCheckbox" name="hidden" />
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Body Text" />
				<widget class="SwatTextarea" name="bodytext">
					<property name="required" type="boolean" value="true" />
					<property name="value" type="string" value="Initial Value" />
				</widget>
			</widget>

			<widget class="SwatFieldset">
				<property name="title" value="Nick's Fieldset" />
				
				<widget class="SwatFormField">
					<property name="title" value="More Text" />
					<widget class="SwatTextarea" name="moretext" />
				</widget>

				<widget class="SwatFormField">
					<property name="title" value="Reply Status" />
					<widget class="SwatFlydown" name="replystatus" />
				</widget>

			</widget>
			
			<widget class="SwatFormField">
				<property name="title" value="Ping Weblogs.com?" />
				<widget class="SwatCheckbox" name="ping">
					<property name="value" value="true" type="boolean" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="class" value="swat-form-footer" />
				<widget class="SwatButton" name="btn_create">
					<property name="title" value="Create" />
				</widget>
			</widget>

		</widget>
	</widget>
</swat-interface>
