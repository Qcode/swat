<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" id="frame1">
		<property name="title" value="New Weblog Post" />
		<widget class="SwatForm" id="form1">

			<widget class="SwatFormField">
				<property name="title" value="Title" />
				<widget class="SwatEntry" id="title">
					<property name="required" type="boolean" value="true" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Short name" />
				<widget class="SwatEntry" id="shortname">
					<property name="required" type="boolean" value="true" />
					<property name="maxlength" type="integer" value="10" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Hidden?" />
				<widget class="SwatCheckbox" id="hidden" />
			</widget>

			<widget class="SwatFormField">
				<property name="title" value="Body Text" />
				<widget class="SwatTextarea" id="bodytext">
					<property name="required" type="boolean" value="true" />
					<property name="value" type="string" value="Initial Value" />
				</widget>
			</widget>

			<widget class="SwatDisclosure">
				<property name="title" value="Optional Fields" />
				
				<widget class="SwatFormField">
					<property name="title" value="More Text" />
					<widget class="SwatTextarea" id="moretext" />
				</widget>

				<widget class="SwatFormField">
					<property name="title" value="Reply Status" />
					<widget class="SwatFlydown" id="replystatus" />
				</widget>

			</widget>
			
			<widget class="SwatFormField">
				<property name="title" value="Ping Weblogs.com?" />
				<widget class="SwatCheckbox" id="ping">
					<property name="value" value="true" type="boolean" />
				</widget>
			</widget>

			<widget class="SwatFormField">
				<property name="class" value="swat-form-footer" />
				<widget class="SwatButton" id="btn_create">
					<property name="title" value="Create" />
				</widget>
			</widget>

		</widget>
	</widget>
</swat-interface>

